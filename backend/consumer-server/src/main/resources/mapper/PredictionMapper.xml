<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.grp202116.consumerserver.mapper.PredictionMapper">

    <resultMap id="predictionMap" type="com.grp202116.consumerserver.pojo.PredictionDO">
        <id column="prediction_id" property="predictionId"/>
        <result column="project_id" property="projectId"/>
        <result column="data_id" property="dataId"/>
        <result column="type" property="type"/>
        <result column="value" property="value"/>
        <result column="model_version" property="model"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="from_name" property="fromName"/>
        <result column="to_name" property="toName"/>
        <result column="original_width" property="originalWidth"/>
        <result column="original_height" property="originalHeight"/>
    </resultMap>

    <update id="alter">
        alter table annotation
            AUTO_INCREMENT = 1;
    </update>

    <insert id="insertAll" parameterType="List" useGeneratedKeys="true" keyProperty="predictionId"
            keyColumn="prediction_id">
        SET FOREIGN_KEY_CHECKS = 0;
        insert into prediction
        (project_id,data_id,type,value,model_version,create_time,update_time,from_name,to_name)
        values
        <foreach collection="list" item="item" index="index" separator=",">
            (#{item.projectId},#{item.dataId},#{item.type},
            #{item.value},#{item.model},#{item.createTime},#{item.updateTime},#{item.fromName},#{item.toName})
        </foreach>;
        SET FOREIGN_KEY_CHECKS = 1;
    </insert>

    <select id="listByDataId" resultMap="predictionMap">
        select *
        from prediction
        where data_id = #{dataId}
    </select>

    <select id="listByProjectId" resultMap="predictionMap">
        select *
        from prediction
        where project_id = #{projectId}
    </select>

    <delete id="deleteByProjectId">
        delete
        from prediction
        where project_id = #{projectId}
    </delete>

</mapper>