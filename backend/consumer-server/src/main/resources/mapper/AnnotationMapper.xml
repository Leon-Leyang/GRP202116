<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.grp202116.consumerserver.mapper.AnnotationMapper">

    <resultMap id="annotationMap" type="com.grp202116.consumerserver.pojo.AnnotationDO">
        <id column="annotation_id" property="annotationId"/>
        <result column="project_id" property="projectId"/>
        <result column="data_id" property="dataId"/>
        <result column="type" property="type"/>
        <result column="value" property="value"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="from_name" property="fromName"/>
        <result column="to_name" property="toName"/>
    </resultMap>

    <insert id="insertAll" parameterType="java.util.List">
        insert into annotation
        (annotation_id,project_id,data_id,type,value,create_time,update_time,from_name,to_name)
        values
        <foreach collection="list" item="item" index="index" separator=",">
            (#{item.annotationId},#{item.projectId},#{item.dataId},#{item.type},#{item.value},
            #{item.createTime},#{item.updateTime},#{item.fromName},#{item.toName})
        </foreach>
    </insert>

    <select id="listByDataId" resultMap="annotationMap">
        select *
        from annotation
        where data_id = #{dataId}
    </select>

    <select id="listByProjectId" resultMap="annotationMap">
        select *
        from annotation
        where project_id = #{projectId}
    </select>

    <delete id="deleteByProjectId">
        delete
        from annotation
        where project_id = #{projectId}
    </delete>

    <delete id="deleteByDataId">
        delete
        from annotation
        where data_id = #{dataId}
    </delete>

</mapper>